generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model ContactMessage {
  id        String   @id @default(cuid())
  name      String
  email     String
  phone     String?
  message   String
  status    String   @default("Belum dihubungi")
  createdAt DateTime @default(now())

  @@map(name: "contact_messages")
}

model Pet {
  id               String         @id @default(cuid())
  name             String
  age              Int
  gender           String
  speciesId        String
  species          Species        @relation(fields: [speciesId], references: [id])
  breed            String
  weight           Int
  height           Int
  city             String
  state            String
  description      String
  published        Boolean        @default(false)
  adoptionStatusId String         @map(name: "adoption_status_id")
  adoptionStatus   AdoptionStatus @relation(fields: [adoptionStatusId], references: [id])
  petImages        PetImage[]
  createdAt        DateTime       @default(now())
  // likes Like[] <<-- BARIS INI DIHAPUS
  
  @@map(name: "pets")
}

model PetImage {
  id    String @id @default(cuid())
  url   String
  petId String @map(name: "pet_id")
  pet   Pet    @relation(fields: [petId], references: [id], onDelete: Cascade)

  @@map(name: "pet_images")
}

model AdoptionStatus {
  id   String @id @default(cuid())
  name String @unique
  Pet  Pet[]

  @@map("adoption_status")
}

model Species {
  id   String @id @default(cuid())
  name String @unique
  Pet  Pet[]

  @@map(name: "species")
}

